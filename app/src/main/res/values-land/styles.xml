<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/helveticaneue</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
         <item name="android:actionMenuTextColor">@color/actionBarText</item>
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyle</item> <!-- sets the style for the overflow button -->
    </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <!--<item name="android:background">@drawable/actionbar_background</item>-->
        <!--<item name="android:backgroundStacked">@drawable/actionbar_background</item>-->
        <!--<item name="android:backgroundSplit">@drawable/actionbar_background</item>-->
    </style>

    <!-- action bar button click text Color-->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionBarText</item>
    </style>

    <!--Toolbar MENUTEXT  text color and textsize-->
    <style name="MyActionBar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Toolbar TITLE  text color and textsize-->
    <style name="ToolbarTitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionBarText</item>

        <!-- include other attributes you want to change: textColor, textStyle, etc -->
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="overflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>





    <style name="MainButtonFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="ButtonFontStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">7sp</item>
    </style>
    <style name="ResetButtonFontStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bg_row_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="slidetodeleteFontStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/bg_row_background</item>
        <item name="android:textStyle">bold</item>

    </style>

    //PDF Menu View
    <style name="Todays_Special">
        <item name="android:textSize">@dimen/TextSize_PDF_TodaysSpecial</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Nutrients">
        <item name="android:textSize">@dimen/TextSize_PDF_Nutrients</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cartlistmenu">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>

    </style>
    <!--<item name="android:textSize">12sp</item>-->
    <style name="cartlist">
        <item name="android:textColor">@color/item_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingStart">@dimen/cartlist_padding_start</item>
    </style>
    <!--<item name="android:textSize">12sp</item>-->



    <style name="itemfont">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:background">@color/white80</item>-->
    </style>

    <style name="MySerifBold" >
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="sharebutton" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>


    </style>





    <!-- <style name="AppTheme.NoActionBar">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>
     </style>-->

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>


    </style>
    <!--<item name="android:textColorSecondary">@color/white</item>-->
    <style name="AppTheme.PopupOverlay" parent="AppTheme" />

    <!--<item name="android:shadowColor">#ffffff</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>-->



</resources>